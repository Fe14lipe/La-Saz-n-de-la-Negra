@{
    ViewData["Title"] = "Acceso Admin";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 p-4">
                <div class="card-body">
                    <div class="mb-4">
                        <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none small">
                            <i class="fa-solid fa-arrow-left"></i> Volver al Inicio
                        </a>
                    </div>

                    <h2 class="text-center fw-bold text-dark mb-2" style="font-family: 'Arial Black';">ACCESO ADMINISTRATIVO</h2>
                    <p class="text-center text-muted mb-4">Panel de control exclusivo.</p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center small py-2">@ViewBag.Error</div>
                    }

                    <form asp-action="LoginAdmin" method="post">
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-muted">CORREO ELECTRÓNICO</label>
                            <input name="correo" type="email" class="form-control form-control-lg bg-light fs-6" placeholder="admin@mesago.com" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted">CONTRASEÑA</label>
                            <input name="password" type="password" class="form-control form-control-lg bg-light fs-6" placeholder="****" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold text-white shadow-sm">INGRESAR</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Reservar" class="text-muted small text-decoration-underline">¿Eres Cliente?</a>
                        <span class="mx-2 text-muted">|</span>
                        <a href="#" id="btnOlvidoPass" class="text-primary small fw-bold text-decoration-none">¿Olvidaste la contraseña?</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('btnOlvidoPass').addEventListener('click', function(e) {
        e.preventDefault();
        Swal.fire({
            title: 'Recuperación de Acceso 🔐',
            html: `
                <div class="text-start bg-light p-3 rounded-3 border">
                    <small class="text-muted fw-bold d-block mb-1">CORREO MAESTRO:</small>
                    <div class="d-flex align-items-center mb-2">
                        <i class="fa-solid fa-envelope text-primary me-2"></i>
                        <span class="font-monospace user-select-all">LaSazonDeLaNegra@promax.com</span>
                    </div>
                    <hr class="my-2">
                    <small class="text-muted fw-bold d-block mb-1">CONTRASEÑA GENERAL:</small>
                    <div class="alert alert-warning py-2 mb-0 d-flex align-items-center">
                        <i class="fa-solid fa-key me-2"></i>
                        <strong>1234</strong>
                    </div>
                </div>
                <p class="mt-3 small text-muted mb-0">Usa estas credenciales para ingresar al panel.</p>
            `,
            icon: 'info',
            confirmButtonColor: '#FF6600',
            confirmButtonText: 'Entendido, ¡Gracias!'
        });
    });
</script>